{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2020",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": false,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ]
}